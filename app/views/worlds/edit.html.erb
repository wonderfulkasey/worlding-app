<section class="hero is-primary is-bold">
    <div class="hero-body">
        <div class="container">
            <h2 class="subtitle">Edit <%= @world.name %></h2>
        </div>
    </div>
</section>
<br>

<%= render "application/errors" %>

<%= render partial: "form", locals: {world: @world} %>

<br>

<div>
<strong>Add a <%= link_to "New character", new_world_character_path(@world) %> at this world</strong>
</div>

<div>
<strong>Add a <%= link_to "New plot", new_world_plot_path(@world) %> at this world</strong>
</div>

<%= form_tag(world_path(@world), method: "delete") do %>
    <input type="submit" value="Delete" class="button is-danger">
<% end %>